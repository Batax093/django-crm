{
  "version": 2,
  "builds": [
    {
      "src": "waitress-serve --port $PORT djcrm.wsgi:application",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": { "cache-control": "max-age=0" }
    },
    {
      "src": "/(.*)",
      "dest": "waitress-serve"
    }
  ]
}
